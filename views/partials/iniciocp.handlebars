<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Descrição</th>
            <th scope="col">Marca</th>
            <th scope="col">Memória RAM</th>
        </tr>
    </thead>
    <tbody>
        {{#each computadores}}
        <tr>
            <th>{{id}}</th>
            <td>{{descricao}}</td>
            <td>{{marca}}</td>
            <td>{{memoriaRam}}</td>
            <td>
                <a href="/editar/{{id}}"><button type="submit" class="btn btn-warning">Editar</button></a>
                <a href="/remover/{{id}}"><button type="submit" class="btn btn-danger">Apagar</button></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
 
